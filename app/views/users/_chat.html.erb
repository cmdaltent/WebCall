<div id="chat_room">

	<div id="chat" class="well">
		<div class="message">
			<label class="label label-info" id ='current_user' ><%= current_user.username%></label>:&nbsp;&nbsp;Hello!
		</div>
	</div>

	<div class="form-inline well">
		<fieldset>
			<label class="control-label" for="input01">Type your message:</label>
			<input type="text" class="input-xlarge" id="message">
			<button id="send" class="btn btn-primary">
				Send
			</button>
			<button id="closed" class="btn btn-primary">
				Close
			</button>
		</fieldset>
	</div>

	<div class="content">
		<div class="row">
			<div class="span9">
				<%= yield %>
			</div>
			<div class="span1">
				&nbsp;
			</div>
			<div class="span3">
				<div class="well sidebar-nav">
					<h3>Talking Users</h3>
					<ul class="nav nav-list" id="user-list">
						<li class="nav-header">
							Active
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div><!--/row-->
</div><!--/content-->

<%= javascript_tag do %>
jQuery(function() {
window.chatController = new Chat.Controller("<%= request.host %>:<%= request.port %>/websocket",true);
})
<% end %>
</div>