<% provide(:title, "Users List") %>
<div class="container">
	<br class="bar" />
	<table class="table table-hover">
		<tr>
			<th>First name</th>
			<th>Last name</th>
			<th>E-mail</th>
			<th>Username</th>
			<th>Token</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @users.each do |user| %>
		<tr>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td class = 'btn btn-info' name = <%= user.username%>><%= user.email %></td>
			<td><%= user.username %></td>
			<td><%= user.token %></td>
			
			<td> 
      <% if current_user != user%>
			<button class='toTalk btn'><%=user.username%></button> 
      <%end%>
      
			<button class="btn">
				<%= link_to 'Show', user%>
			</button>
			<button class="btn">
				<%= link_to 'Edit', edit_user_path(user) %>
			</button>
			<button class="btn">
				<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
			</button></td>
		</tr>
		<% end %>
	</table>

	<%= render 'chat'%>

</div>
