<% provide(:title,"Meeting List") %>

<h4>Listing meetings</h4>

<div class="container">
	<div class="row-fluid">
		<div class="span2">
			<h6>Title</h6>
		</div>
		<div class="span2">
			<h6>Description</h6>
		</div>
		<div class="span2">
			<h6>Start Time</h6>
		</div>
		<div class="span2">
			<h6>Expected Duration</h6>
		</div>
		
	</div>









<% @meetings.each do |meeting| %>
	
		<div class="row-fluid">
			<div class="span2">
				<%= link_to meeting.title, conference_url(meeting.token) %>
			</div>
			<div class="span2">
				<%= meeting.description %>
			</div>
			<div class="span2">
				<%= meeting.startDate %></div>
			<div class="span2">
				<%= meeting.expectedDuration %></div>
			<div class="span1">
				<%= link_to 'Show', meeting, class: "btn"  %></div>
			<div class="span1">
				<%= link_to 'Join', conference_url(meeting.token), class: "btn" %></div> 
			</div>
<% end %>
		</div>


